{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/firebase.js", "pages/api/auth/[...nextauth].ts", "pages/login.js", "pages/tickets.tsx", "pages/politique.tsx", "pages/bingo.js", "pages/condition.js", "component/Footer.js"],
  "exclude": ["node_modules"]
}
